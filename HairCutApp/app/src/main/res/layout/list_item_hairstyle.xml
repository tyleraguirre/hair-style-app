<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/style_image"
        android:layout_width="72dp"
        android:layout_height="99dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fauxhawk_sv_m" />

    <TextView
        android:id="@+id/style_name"
        android:layout_width="73dp"
        android:layout_height="19dp"
        android:text="style_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/style_image"
        app:layout_constraintStart_toStartOf="@+id/style_image"
        app:layout_constraintTop_toBottomOf="@+id/style_image" />

</androidx.constraintlayout.widget.ConstraintLayout>